%p#notice= notice

%p
  %b First name:
  = @person.first_name
%p
  %b Middle name:
  = @person.middle_name
%p
  %b Last name:
  = @person.last_name
%p
  %b Is supervisor:
  = !!@person.is_supervisor
%p
  %b Email:
  = @person.email
%p
  %b Phone:
  = @person.phone
%p
  %b Teams:
  = @person.teams.map(&:name).join(', ')

%p
  %b notes:
  = @person.notes



= link_to 'Edit', edit_person_path(@person)
\|
= link_to 'Back', people_path
