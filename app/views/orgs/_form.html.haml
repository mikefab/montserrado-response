= bootstrap_form_for @org do |f|
  - if @org.errors.any?
    #error_explanation
      %h2= "#{pluralize(@org.errors.count, "error")} prohibited this org from being saved:"
      %ul
        - @org.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name
  .field
    = f.text_field :nick, placeholder: 'acronym'

  .field
    = f.text_field :image_url

  .field
    = f.text_area :description
  .actions
    = f.submit 'Save'
