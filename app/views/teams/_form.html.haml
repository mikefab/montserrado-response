= bootstrap_form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name

  .field
    = f.select :org_id, Org.all.collect {|x| [x.name, x.id]}, {}, :multiple => false


  .field
    = f.select :zone_ids, Zone.all.collect {|x| [x.epi_code, x.id]}, {label: 'Zones'},:multiple => true


  .field
    = f.select :task_ids, Task.all.collect {|x| [x.name, x.id]}, {label: 'Tasks'}, :multiple => true


  .actions
    = f.submit 'Save'
